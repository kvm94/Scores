<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.condorcet.marra.scores">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/titleLoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/titleRegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/titleHomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddScoreActivity"
            android:label="@string/titleAddScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GamesActivity"
            android:label="@string/titleGamesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TopActivity"
            android:label="@string/titleTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsersActivity"
            android:label="@string/titleUsersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GamesWizard"
            android:label="@string/labelGamesWizard"
            android:screenOrientation="portrait" />
        />
    </application>

</manifest>